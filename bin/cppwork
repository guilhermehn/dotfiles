#!/usr/bin/env bash

#-----------------------------------------------------------------------
#  Create directory structure for a basic C++ project, add Makefile and
#  empty main.cpp
#-----------------------------------------------------------------------
__ScriptVersion="1.0"

#===  FUNCTION  ========================================================
#         NAME:  usage
#  DESCRIPTION:  Display usage information.
#=======================================================================
function usage ()
{
  echo "Usage :  $0 [options] [--]

  Options:
  -h|help       Display this message
  -v|version    Display script version
  -X            Create directory structure with parent dir X"
}    # ----------  end of function usage  ----------

#-----------------------------------------------------------------------
#  Handle command line arguments
#-----------------------------------------------------------------------
currDir=$PWD

while getopts ":hv" opt
do
  case $opt in

    h|help     )  usage; exit 0   ;;

    v|version  )  echo "$0 -- Version $__ScriptVersion"; exit 0   ;;

    * )
      mkdir -p $currDir/$OPTARG/bin
      mkdir $currDir/$OPTARG/build
      mkdir $currDir/$OPTARG/src
      mkdir $currDir/$OPTARG/include
      touch $currDir/$OPTARG/src/main.cpp
      cp $HOME/Documents/Makefile $currDir/$OPTARG/
      ;;

    esac    # --- end of case ---
  done
  shift $(($OPTIND-1))
