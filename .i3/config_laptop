# Startup programs
exec --no-startup-id numlockx &
exec --no-startup-id termite --exec=ncmpcpp --title=ncmpcpp --role=ncmpcpp &
exec --no-startup-id compton -b --config ~/.config/compton/compton.conf &
exec --no-startup-id dunst -config file ~/.config/dunst/dunstrc &
exec --no-startup-id redshift &
exec --no-startup-id anamnesis --start &
exec --no-startup-id nm-applet &
exec --no-startup-id menutray -g -i

# Set background
exec --no-startup-id feh --bg-fill $HOME/Pictures/Wallpapers/guq95s2.jpg

# Screenshots
bindsym --release Print exec "maim -p 0 -c 0.96,0.5,0.09 $HOME/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png"
bindsym --release Shift+Print exec "maim -s -p 0 -c 0.96,0.5,0.09 $HOME/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png"

# Reduce/increase screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight -inc 10%; pkill -SIGRTMIN+2 i3blocks"
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -dec 10%;pkill -SIGRTMIN+2 i3blocks"

# Reduce/increase volume
# Requires https://github.com/graysky2/pulseaudio-ctl
bindsym XF86AudioRaiseVolume exec --no-startup-id "pulseaudio-ctl up 5; pkill -SIGRTMIN+1 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "pulseaudio-ctl down 5; pkill -SIGRTMIN+1 i3blocks"
bindsym XF86AudioMute exec --no-startup-id "pulseaudio-ctl mute; pkill -SIGRTMIN+1 i3blocks"

# Program keybindings
bindsym $mod+n exec thunar
bindsym $mod+b exec chromium
